#include <iostream>
using namespace std;
int main() {
 int a,b;
 cout<<"Enter a and b variable: ";
 cin>>a>>b;
 int *ptrA= &a;
 int *ptrB= &b;
 cout<<"Value of A Variable : "<<*ptrA<<endl;
 cout<<"Address of A Variable : "<<ptrA<<endl;
 cout<<"Value of B Variable : "<<*ptrB<<endl;
 
 cout<<"Address of B Variable : "<<ptrB<<endl;
}
